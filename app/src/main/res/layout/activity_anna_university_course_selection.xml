<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AnnaUniversityCourseSelectionActivity">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/payu_dimen_150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#9DC9FF"
        android:paddingTop="@dimen/payu_dimen_10dp"
        android:src="@drawable/logo1" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/payu_dimen_30dp"
        android:src="@drawable/annauniversity" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anna University"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        android:textAlignment="center" />

    <ImageView
        android:layout_height="@dimen/payu_dimen_250dp"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/payu_dimen_5dp"
        android:scaleType="fitXY"
        android:src="@drawable/square"
        android:layout_gravity="center"
        android:id="@+id/product_img" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="@dimen/payu_dimen_50dp"
        android:tooltipText="@string/app_name"
        style="@style/SpinnerTheme"
        android:visibility="gone"
        android:spinnerMode="dropdown"
        android:layout_margin="@dimen/payu_dimen_10dp"/>
</LinearLayout>