<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_annauniv"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:backgroundTint="#012148"
        android:layout_margin="@dimen/payu_dimen_5dp"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/univ_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/payu_dimen_30dp"
            android:src="@drawable/annauniversity" />

        <TextView
            android:id="@+id/univ_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anna University"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:textAlignment="center" />
    </androidx.cardview.widget.CardView>

</LinearLayout>